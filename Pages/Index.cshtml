@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard Boschdijk 114";
}
<style>
    /* algemene grid: altijd 3 op een rij */
    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
        max-width: 1200px;
        margin: 0 auto;
    }

    /* floating container (hangt over de foto) */
    .dashboard-floating {
        position: relative;
        margin-top: -210px; /* DIT bepaalt hoe ver hij over de foto hangt */
        z-index: 5;
    }

    /* normale container onder de foto */
    .dashboard-normal {
        margin-top: 40px;
    }

    /* basis kaart */
    .dashboard-card {
        background: white;
        padding: 18px 20px;
        text-decoration: none;
        color: #111;
        display: block;
    }

    /* bovenste rij: GEEN rand */
    .no-border .dashboard-card {
        border: none;
    }

    /* onderste rij: WEL rand */
    .with-border .dashboard-card {
        border: 1px solid #000;
    }

    /* titel */
    .dashboard-card h2 {
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    /* lijst */
    .dashboard-card ul {
        margin: 0;
        padding-left: 18px;
    }

    /* hover subtiel */
    .dashboard-card:hover {
        background: #f6f6f6;
    }

</style>
<style>
    /* Pagina-wijde slideshow */
    .homepage-carousel img {
        height: 70vh; /* hoogte van de slideshow */
        min-height: 520px;
        max-height: 820px;
        object-fit: cover; /* netjes croppen */
    }
    /* carousel moet referentiepunt zijn */
    #homepageCarousel {
        position: relative;
    }

    /* zwevende titel */
    .hero-title {
        position: absolute;
        top: 30px;
        left: 30px;
        color: white;
        font-weight: 800;
        font-size: 2.4rem;
        z-index: 10; /* altijd boven de foto's */
        text-shadow: 0 4px 15px rgba(0,0,0,0.6);
    }

</style>

